---
const currentPath = Astro.url.pathname.replace(/\/$/, "");
const isActive = (path: string) => currentPath === path.replace(/\/$/, "");
---

<style>
  .tp-main-menu ul li a:hover,
  .tp-main-menu ul li a.active-link {
    color: #ff5f15 !important;
  }
  .btn-text {
    padding: 6px;
  }
</style>

<header class="tp-header-height">
  <div class="tp-hader-area header-transparent tp-bg-common-white">
    <div
      class="tp-header-top tp-header-top-spacing tp-bg-theme-primary d-none d-lg-block"
    >
      <div class="container container-1690">
        <div class="row">
          <div class="col-lg-7">
            <div class="tp-header-top-info">
              <ul>
                <li>
                  <a class="d-flex align-items-center gap-2">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                      <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    10 AM to 6 PM IST
                  </a>
                </li>
                <li><span class="tp-border"></span></li>
                <li>
                  <!-- <a href="mailto:hello@contact.com" target="_blank">
                    email svg
                    hello@contact.com
                  </a> -->
                </li>
              </ul>
            </div>
          </div>
          <div class="col-lg-5">
            <div
              class="tp-header-top-right d-flex align-items-center justify-content-end"
            >
              <div class="tp-header-top-call">
                <a
                  href="tel:+91 85528 59594"
                  class="tp-text-common-white hover-text-secondary d-flex gap-2 align-items-center"
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2" fill="none"/>
                  </svg>
                  +91 85528 59594
                </a>
              </div>
              <div class="tp-header-top-social ml-20">
                <a href="https://www.linkedin.com/company/secure-place/" target="_blank" class="tp-text-common-white hover-text-secondary d-flex align-items-center">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="currentColor"/>
                  </svg>
                </a>
              </div>
              <!-- <span class="tp-header-top-right-border"></span> -->
              <div class="tp-header-top-lang p-relative d-inline-block">
                <!-- <span
                  class="tp-header-top-selected-lang fs-14 tp-text-common-white pr-15 p-relative"
                  >ENG</span
                >
                <ul class="tp-header-top-lang-list">
                  <li>Spanish</li>
                  <li>English</li>
                  <li>Canada</li>
                </ul> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      id="header-sticky"
      class="tp-header-bottom tp-header-lg-space p-relative"
    >
      <div class="container container-1690">
        <div class="row align-items-center">
          <div class="col-xl-2 col-sm-3 col-5">
            <div class="tp-header-logo">
              <a href="/">
                <img
                  data-width="768"
                  src="assets/img/logo/logo1.png"
                  alt="Logo"
                />
              </a>
            </div>
          </div>

          <div class="col-xl-10 col-sm-9 col-7">
            <div
              class="d-flex align-items-center justify-content-end justify-content-xxl-between"
            >
              <div class="tp-main-menu d-none d-xl-inline-block mr-20">
                <nav class="tp-mobile-menu-active">
                  <ul>
                    <li class="p-inherit">
                      <a href="/" class={isActive("/") ? "active-link" : ""}
                        >Home</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/about"
                        class={isActive("/about") ? "active-link" : ""}>About</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/features"
                        class={isActive("/features") ? "active-link" : ""}
                        >Features</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/certification"
                        class={isActive("/certification") ? "active-link" : ""}
                        >Certification</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/industriesweserve"
                        class={isActive("/industriesweserve")
                          ? "active-link"
                          : ""}>Industries We Serve</a
                      >
                    </li>
                    <!--<li class="p-inherit">
                      <a
                        href="/articles"
                        class={isActive("/articles") ? "active-link" : ""}
                        >Blogs</a
                      >
                    </li>-->
                    <li>
                      <a
                        href="/demo"
                        class={isActive("/demo") ? "active-link" : ""}>Demo</a
                      >
                    </li>
                  </ul>
                </nav>
              </div>

              <div
                class="tp-header-contact d-flex align-items-center justify-content-end"
              >
                <div class="tp-header-search">
                  <button class="tp-search-click">
                    <!-- search svg -->
                  </button>
                </div>

                <div class="tp-header-btn ml-30 d-none d-md-block">
                  <a
                    href="/contact"
                    class="tp-btn-lg d-inline-block lh-0 tp-round-24 fs-16 tp-bg-theme-secondary ls-0 tp-btn-switch-animation fw-500"
                    style="color: #fff;"
                  >
                    <span
                      class="d-flex align-items-center justify-content-center"
                    >
                      <span class="btn-text">Contact Us</span>
                      <!-- <span class="btn-icon"
                        ><i class="fa-sharp fa-regular fa-arrow-right"
                        ></i></span
                      >
                      <span class="btn-icon"
                        ><i class="fa-sharp fa-regular fa-arrow-right"
                        ></i></span
                      > -->
                    </span>
                  </a>
                </div>

                <div class="tp-header-sidebar-menu ml-10">
                  <button
                    class="tp-menu-bar tp-header-sidebar-btn border-full-1 rounded-circle lh-1"
                  >
                    <!-- sidebar svg -->
                    <!-- <svg
                      width="18"
                      height="16"
                      viewBox="0 0 18 16"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M0 7.23636H7.45455L3.74545 0.763636L5.05455 0L8.8 6.47273L12.5455 0L13.8545 0.763636L10.1091 7.23636H17.6V8.76364H10.1091L13.8545 15.2364L12.5455 16L8.8 9.52727L5.05455 16L3.74545 15.2364L7.45455 8.76364H0V7.23636Z"
                        fill="currentColor"></path>
                    </svg> -->
                    <svg
                      class="w-6 h-6 text-gray-800 dark:text-white"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      fill="none"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-width="2"
                        d="M5 7h14M5 12h14M5 17h14"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
