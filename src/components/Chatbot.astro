---
// Chatbase chatbot floating widget component
---

<div id="chatbot-container">
  <div id="chatbot-toggle" class="chatbot-toggle">
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M20 2H4C2.9 2 2 2.9 2 4V22L6 18H20C21.1 18 22 17.1 22 16V4C22 2.9 21.1 2 20 2Z"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
    <span class="chatbot-close-icon" style="display: none;">Ã—</span>
  </div>
  <div id="chatbot-widget" class="chatbot-widget" style="display: none;">
    <iframe
      src="https://www.chatbase.co/chatbot-iframe/B-P7P2pQs7U4dqp2pkJ0e"
      width="100%"
      style="height: 100%; min-height: 600px"
      frameborder="0"
    ></iframe>
  </div>
</div>

<style>
  #chatbot-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
    font-family: inherit;
  }

  .chatbot-toggle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: white;
    position: relative;
  }

  .chatbot-toggle:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 25px rgba(102, 126, 234, 0.6);
  }

  .chatbot-toggle svg {
    width: 28px;
    height: 28px;
  }

  .chatbot-close-icon {
    font-size: 32px;
    font-weight: 300;
    line-height: 1;
  }

  .chatbot-widget {
    position: absolute;
    bottom: 80px;
    right: 0;
    width: 380px;
    height: 600px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    animation: slideUp 0.3s ease;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chatbot-widget iframe {
    border: none;
    border-radius: 16px;
  }

  @media (max-width: 480px) {
    .chatbot-widget {
      width: calc(100vw - 40px);
      height: calc(100vh - 140px);
      right: -10px;
    }

    #chatbot-container {
      bottom: 15px;
      right: 15px;
    }
  }
</style>

<script>
  (function () {
    const toggle = document.getElementById("chatbot-toggle");
    const widget = document.getElementById("chatbot-widget");
    const chatIcon = toggle?.querySelector("svg");
    const closeIcon = toggle?.querySelector(".chatbot-close-icon");

    if (!toggle || !widget) return;

    toggle.addEventListener("click", function () {
      const isVisible = widget.style.display !== "none";

      if (isVisible) {
        widget.style.display = "none";
        if (chatIcon) chatIcon.style.display = "block";
        if (closeIcon) closeIcon.style.display = "none";
      } else {
        widget.style.display = "block";
        if (chatIcon) chatIcon.style.display = "none";
        if (closeIcon) closeIcon.style.display = "block";
      }
    });
  })();
</script>

